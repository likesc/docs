@import "_vars"

.markdown-body {

	line-height : 1.6;

	blockquote {
		font-size : $font-size - 1;
		border-left : $font-size-quarter solid $border-color-gray;
		color : $gray;
		margin : 0;
		padding : 0 $font-size;

		> :first-child {
			margin-top : 0;
		}
	}

	a {
		text-decoration : none;
		&:hover {
			text-decoration : underline;
		}
	}

	img {
		max-width : 100%;
		box-sizing : border-box;
		border : 0;
	}

	/* list */
	ul, ol {
		margin-top : 0;
		margin-bottom : 0;
		padding-left : $font-size * 1.75;
		ol {
			list-style-type : disc;
			ol {
				list-style-type : circle;
			}
		}
	}
	dl {
		padding : 0;
		dt {
			padding : 0;
			margin-top : $font-size;
			font-size : $font-size;
			font-style : italic;
			font-weight : 600;
		}
		dd {
			padding : 0 $font-size;
			margin-bottom : $font-size;
		}
	}

	li {
		> p {
			margin-top : $font-size;
		}
		+ li {
			margin-top : $font-size-quarter;
		}
	}

	/* table */
	table {
		display : block;
		width : 100%;
		overflow : auto;
		border-collapse : collapse;
		border-spacing : 0;
		th {
			font-weight : 600;
		}
		th, td {
			border : 1pt solid $border-color-gray;
			padding : 0.5 * $font-size-small $font-size-small;
			text-align : center;
		}
		> tbody {
			tr:nth-child(2n) {
				background-color : $light;
			}
		}
	}

	hr {
		background-color : darken($light, 5%);
		border : 0;
		height : $font-size-quarter;
		margin : 24px 0;
		padding : 0;
	}


